<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BECDDD"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/storeImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/jap14" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/storejang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="매장명"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.037" />

                    <TextView
                        android:id="@+id/storeex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="매장 설명"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/storejang"
                        app:layout_constraintVertical_bias="0.0" />


                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/favorite_check"
                        android:button="@null"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.994"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.333" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/horizontalLine2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/storeExplain"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/favoritemenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인기 메뉴"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/horizontalLine3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/store_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#BECDDD" />

                <View
                    android:id="@+id/horizontalLine4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="좌석 현황" />

                <View
                    android:id="@+id/horizontalLine5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black" />

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/T0"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T1"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T2"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T3"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T4"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/T5"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T6"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T7"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T8"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T9"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/T10"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T11"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T12"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T13"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T14"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/T15"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T16"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T17"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T18"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T19"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/T20"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T21"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T22"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T23"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                        <ImageView
                            android:id="@+id/T24"
                            android:layout_width="82dp"
                            android:layout_height="82dp"
                            app:srcCompat="@drawable/white" />

                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>