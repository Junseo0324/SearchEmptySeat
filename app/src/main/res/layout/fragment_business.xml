<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/storename"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="매장명" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/menusetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_white"
            android:drawableLeft="@drawable/menufix"
            android:gravity="center"
            android:text="메뉴 관리"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:id="@+id/batchsetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_white"
            android:drawableLeft="@drawable/seatfix"
            android:gravity="center"
            android:text="좌석 배치도 관리"
            android:textColor="#000000"
            android:textSize="19sp" />

        <Button
            android:id="@+id/storeinformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_white"
            android:drawableLeft="@drawable/storefix"
            android:gravity="center"
            android:text="가게 정보 수정하기"
            android:textColor="#000000"
            android:textSize="19sp" />

    </LinearLayout>

</LinearLayout>